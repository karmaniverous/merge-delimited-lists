{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended",
    "plugin:promise/recommended"
  ],
  "ignorePatterns": ["/dist/**/*.*", "*.json"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["mocha", "promise"]
}
